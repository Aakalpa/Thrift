{
	"manifest_version": 2, 
	"name": "ABC",
	"version": "1",
	"description": "Saeed Translate for Chrome",
	 "icons": {
		"16": "images/get_started16.png"
	  },
	  "browser_action" : {
		  "default_icon" : "images/get_started16.png",
		  "default_popup" : "popup.html",
		  "default_title" : "thrift"
	  },
	"content_scripts": [ {
		  "all_frames": true,
		  "js": [ "jquery-3.3.1.min.js","content.js" ],
		  "matches": [ "http://*/*", "https://*/*" ],
		  "css" : ["content.css"]
	   } ],
	"background": {
		"scripts": ["background.js"]
	  },

	"permissions": [
		"storage",
		"declarativeContent",
		"contextMenus",
		"background",
		"tabs",
		"activeTab",
		"http://*/*",
		"https://*/*"
	]
	
	}